
<h3>Search Results</h3>

<% @people.each do |person| %>
  <ul><%= link_to person_path(person.id) do %>
   <li> <%= image_tag("#{@configuration.base_url}w154#{person.profile_path}") if person.profile_path %>
        <%= link_to person.name, person_path(person.id) %>
        <% end %>
    </li>
  </ul>
<% end %>


<% @film.each do |movie| %>
    <ul>
      <li>
        <%= link_to movie_path(movie.id) do %>
        <%= image_tag("#{@configuration.base_url}w154#{movie.poster_path}") if movie.poster_path %>
        <% end %>
      </li>
      <li>
          <%#= link_to movie.title, movie_path(movie.id) %> <%#= movie.release_date.to_date.strftime("%Y") %> <br />
          <%= link_to movie.title, movie_path(movie.id) %> (<%= movie.release_date.to_date %>) <br />
        Directors: <% Tmdb::Movie.crew(movie.id).each do |crew| %>
        <% if crew['department'] == 'Directing' %>
        <%= link_to crew['name'], person_path(crew['id']) %>
        <% end %>
        <% end %><br>
        Writers:
        Starring: <% Tmdb::Movie.casts(movie.id).first(3).each do |cast| %>
        <%= link_to cast['name'], person_path(cast['id']) %> |
        <% end %><br>

      </li>
    </ul>

    <% end if @film %>
